<Page x:Class="Kiosk.Pages.CheckPhonePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="clr-namespace:Kiosk.Views"
      Title="">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <views:HeaderView Grid.Row="0" >
            <views:HeaderView.Content>
                <Grid>
                    <!-- 가운데: 기존 로고 이미지 -->
                    <Image Source="/Images/Logo.png"
              Height="50"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"/>
                    <!-- 오른쪽: 닫기버튼 -->
                    <StackPanel Orientation="Horizontal"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Margin="0,0,10,0">
                        <Button Style="{StaticResource ImageButtonStyle}"
                                Command="{Binding CloseCommand}"
                                Margin="0,0,10,0">
                            <Image Source="/Images/btnClose.png" Height="40"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </views:HeaderView.Content>
        </views:HeaderView>

        <!-- Content -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Orientation="Vertical">
            
            <!-- 휴대폰 이미지 -->
            <Image Source="/Images/RemoteAccess.png" 
                   Width="200" 
                   Height="180" 
                   Margin="0,20,0,0"/>

            <!-- 안내 텍스트 -->
            <TextBlock Text="인증할 핸드폰번호를 입력해주세요" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,30,0,10"/>

            <!-- 핸드폰 번호 입력 -->
            <Border Background="Transparent" 
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="8" 
                    Padding="0" 
                    Width="330"
                    Margin="0,30,0,-10" Height="60">
                <TextBlock x:Name="PhoneNumberDisplay"
                           Text="{Binding PhoneNumberFormatted, Mode=OneWay}"
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Padding="10"/>
            </Border>

            <!-- 키패드 -->
            <Grid HorizontalAlignment="Center" 
                  Margin="0,50,0,-30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>

                <!-- 첫 번째 줄 -->
                <Button Grid.Row="0" Grid.Column="0" Content="1" Style="{StaticResource KeypadButtonStyle}"/>
                <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource KeypadButtonStyle}"/>
                <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource KeypadButtonStyle}"/>

                <!-- 두 번째 줄 -->
                <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource KeypadButtonStyle}"/>
                <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource KeypadButtonStyle}"/>
                <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource KeypadButtonStyle}"/>

                <!-- 세 번째 줄 -->
                <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource KeypadButtonStyle}"/>
                <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource KeypadButtonStyle}"/>
                <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource KeypadButtonStyle}"/>

                <!-- 네 번째 줄 -->
                <Button Grid.Row="3" Grid.Column="0" Content="전체지움" Style="{StaticResource KeypadButtonStyle}" FontSize="16"/> 
                <Button Grid.Row="3" Grid.Column="1" Content="0" Style="{StaticResource KeypadButtonStyle}"/>
                <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource KeypadButtonStyle}">
                    <Image Source="/Images/btnRemove.png" 
                           Width="28" 
                           Height="28"/>
                </Button> 

            </Grid>
        </StackPanel>
    </Grid>
</Page>